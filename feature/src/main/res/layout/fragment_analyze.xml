<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnalyzeFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableLayout
                android:id="@+id/tl_transform"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="1,2,3"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp">

                <TableRow>

                    <Button
                        android:id="@+id/btn_translate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/translate" />

                    <EditText
                        android:id="@+id/et_translate_x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:hint="@string/x"
                        android:inputType="number|numberDecimal|numberSigned" />

                    <EditText
                        android:id="@+id/et_translate_y"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/y"
                        android:inputType="number" />

                </TableRow>

                <TableRow>

                    <Button
                        android:id="@+id/btn_rotate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rotate" />

                    <EditText
                        android:id="@+id/et_rotate_theta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/theta"
                        android:inputType="number" />

                    <EditText
                        android:id="@+id/et_rotate_x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/x"
                        android:inputType="number" />

                    <EditText
                        android:id="@+id/et_rotate_y"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/y"
                        android:inputType="number" />

                </TableRow>

                <TableRow>

                </TableRow>

                <TableRow>

                </TableRow>

            </TableLayout>

        </ScrollView>

        <RadioGroup
            android:id="@+id/rg_coord_system"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <RadioButton
                android:id="@+id/radio_side_angle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="@string/side_angle" />

            <RadioButton
                android:id="@+id/radio_polar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/polar" />

            <RadioButton
                android:id="@+id/radio_xy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/xy" />
        </RadioGroup>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
